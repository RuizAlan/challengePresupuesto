<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Register Operation</h3>
                </div>
                <div class="card-body">
                    <form action="/operations/add" method="POST">
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="inputGroupSelect02">Operation</label>
                            <select type="text" name="tipo" class="form-select" id="inputGroupSelect02" required>
                                <option selected>Choose...</option>
                                <option name="Entry">Entry</option>
                                <option name="Egress">Egress</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea name="concepto" rows="2" class="form-control" placeholder="Concept" required></textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" name="monto" placeholder="Amont" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="date" name="fecha" placeholder="Date" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>